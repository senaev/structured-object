{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es3",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "pretty": true,
    "moduleResolution": "node",
    "types": [
      "mocha",
      "chai"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
